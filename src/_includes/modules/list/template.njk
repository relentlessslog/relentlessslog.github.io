<section class="list-section">
    <div class="list-content inner-column">
        <h2 class="section-title">{{ section.title or placeholders.title }}</h2>

        <ul class="list">
            {% for item in collections[ section.tagName ].slice(0, section.number) %}
            <li class="list-item">
                <picture style="background-image: url({{ item.data.image or placeholders.images.landscape }})">
                    <img src="{{ item.data.image or placeholders.images.landscape }}" alt="">
                </picture>
                <h3>{{ item.data.title or placeholders.title}}</h3>
                <p>{{ item.data.description or placeholders.paragraph }}</p>
                <a href="{{ item.url }}"><span>Check it out</span></a>
            </li>
        {% endfor %}
        </ul>
        
        <a href="/{{ section.tagName }}" class="span">View All</a>
    </div>
</section>