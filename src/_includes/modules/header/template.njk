<header class="site-header">
  <div class="inner-column header-content">
    <a href="/" class="home-btn">
      <picture>
        <img src="{{ contact.logo or placeholders.images.circle }}" alt="">
      </picture>
    </a>

    <nav class="site-nav">
      {% if navigation.headerLinks.length %}
        {% for item in navigation.headerLinks %}
          {% if item.type == "externalLink" %}
            <a href="{{ item.title | slugify }}" class="nav-link" target="_blank">{{ item.title }}</a>
          {% else %}
            <a href="/{{ item.title | slugify }}" class="nav-link">{{ item.title | capitalize }}</a>
          {% endif %}
        {% endfor %}
      {% else %}
        <a href="#">link 1</a>
        <a href="#">link 2</a>
        <a href="#">link 3</a>
      {% endif %}
    </nav>
  </div>
</header>